@model Restaurant

@{
    ViewBag.Title = "Create";
}

<h1>Create</h1>

<form method="POST">
    <!-- <input type="text" name="Name" value="" /> -->
    <div>
        <label asp-for="Name" />
        <input asp-for="Name" />
        <span asp-validation-for="Name" />
    </div>

    <div>
        <label asp-for="Cuisine" />
        <select asp-for="Cuisine" 
            asp-items="@Html.GetEnumSelectList<CuisineType>()">
        </select>
        <span asp-validation-for="Cuisine" />
    </div>
    
    <input type="submit" name="save" value="Save" />
</form>

<!--
    name of input has to match the property name it corresponds to
-->